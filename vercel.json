{
  "version": 2,
  "builds": [
    { "src": "index.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/index.js" }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "destination": "https://www.fuku-api.my.id/$1",
      "permanent": true
    }
  ],
  "routes": [
    {
      "src": "^/(.*\\.(?:css|js|png|jpg|jpeg|gif|svg|ico|webp|mp4|webm|woff2?|ttf))$",
      "dest": "/public/$1"
    },
    {
      "src": "^/(.*\\.html)$",
      "dest": "/public/$1"
    },
    {
      "src": "^/(.*)$",
      "dest": "/public/index.html"
    }
  ]
}